<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.manrajsingh960.gettogether.CreateEvent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#43A3CB">

        <TextView
            android:id="@+id/createEventTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Event"
            android:textSize="40sp"
            android:textColor="#1E5A79"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.135" />

        <EditText
            android:id="@+id/eventName"
            android:layout_width="330dp"
            android:layout_height="30dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Event Title"
            android:textColor="#ffffff"
            android:background="@drawable/login_buttons"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/createEventTitle"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <EditText
            android:id="@+id/eventStart"
            android:layout_width="330dp"
            android:layout_height="30dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Event Start Time"
            android:textColor="#ffffff"
            android:background="@drawable/login_buttons"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/eventName"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <EditText
            android:id="@+id/eventEnd"
            android:layout_width="330dp"
            android:layout_height="30dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Event End Time"
            android:textColor="#ffffff"
            android:background="@drawable/login_buttons"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/eventStart"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <EditText
            android:id="@+id/eventParticipants"
            android:layout_width="330dp"
            android:layout_height="30dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Number of maximum participants"
            android:textColor="#ffffff"
            android:background="@drawable/login_buttons"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/eventEnd"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <EditText
            android:id="@+id/eventDescription"
            android:layout_width="338dp"
            android:layout_height="150dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Event Description"
            android:textColor="#ffffff"
            android:background="@drawable/login_buttons"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/eventParticipants"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <EditText
            android:id="@+id/eventTag1"
            android:layout_width="330dp"
            android:layout_height="30dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Enter first filter"
            android:textColor="#ffffff"
            android:background="@drawable/login_buttons"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/eventDescription"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" />

        <EditText
            android:id="@+id/eventTag2"
            android:layout_width="330dp"
            android:layout_height="30dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Enter second filter"
            android:textColor="#ffffff"
            android:background="@drawable/login_buttons"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/eventTag1"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" />

        <EditText
            android:id="@+id/eventTag3"
            android:layout_width="330dp"
            android:layout_height="30dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Enter third filter"
            android:textColor="#ffffff"
            android:background="@drawable/login_buttons"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/eventTag2"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" />

        <EditText
            android:id="@+id/eventLocation"
            android:layout_width="330dp"
            android:layout_height="30dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Enter Location"
            android:textColor="#ffffff"
            android:background="@drawable/login_buttons"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/eventTag3"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <Button
            android:id="@+id/accountCreateButton"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Create\n Event"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:background="#1E5A79"
            android:onClick="goToMainMenu"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/eventLocation"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            app:layout_constraintVertical_bias="0.0" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>

